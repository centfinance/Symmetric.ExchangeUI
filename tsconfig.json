{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"]
}
